<div class="row justify-content-center">
  <nav>
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="{{href}}?size={{size}}&cur={{previous}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      {{#each pages as |it| ~}}
      <li class="page-item">
        <a class="page-link" href="{{../href}}?size={{../size}}&cur={{it}}">
          {{it}}
        </a>
      </li>
      {{/each ~}}
      <li class="page-item">
        <a class="page-link" href="{{href}}?size={{size}}&cur={{next}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>
</div>
